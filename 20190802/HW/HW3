package text;


public class text {

	private static java.util.Scanner scanner;

	public static void main(String[] args) {
		scanner = new java.util.Scanner(System.in);
		int a = scanner.nextInt();
		int b = scanner.nextInt();
		int c = scanner.nextInt();
		int d = scanner.nextInt();
		int rect1 = rect1(a,b,c,d);
		int rect2 = rect2(a,b,c,d);
		System.out.println("面積為"+rect1);
		System.out.print("周長為"+rect2);

	}
	
	public static int rect1(int a,int b,int c,int d) {
		return (d-b)*(c-a);

	}
	public static int rect2(int a,int b,int c,int d) {
		return ((d-b)+(c-a))*2;

	}

}
